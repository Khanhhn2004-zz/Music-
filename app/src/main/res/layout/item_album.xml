<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp">

        <ImageView
            android:id="@+id/im_disk"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/disk"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/im_album"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/album"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_name_album"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="@string/web"
            app:layout_constraintBottom_toTopOf="@id/tv_name_singer"
            app:layout_constraintLeft_toRightOf="@id/im_disk"
            app:layout_constraintRight_toLeftOf="@id/im_back"
            app:layout_constraintTop_toTopOf="@id/im_album" />

        <TextView
            android:id="@+id/tv_name_singer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:text="@string/web"
            app:layout_constraintBottom_toBottomOf="@id/im_album"
            app:layout_constraintLeft_toRightOf="@id/im_disk"
            app:layout_constraintRight_toLeftOf="@id/im_back"
            app:layout_constraintTop_toBottomOf="@id/tv_name_album" />

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>